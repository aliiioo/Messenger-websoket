@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@model Core.DTOs.RegisterVM
<link href="~/css/StyleSheet_1.css" rel="stylesheet" />
<div class="login-wrap">
    <div class="login-html">
        <input id="tab-2" type="radio" name="tab" class="sign-up" checked><label for="tab-2" class="tab">Sign Up</label>
        <div class="login-form">
            <form asp-action="Register" method="post">
               
                <div class="sign-up-htm">
                    <div class="group">
                        <label asp-for="Email" class="label">Eamil</label>
                        <input asp-for="Email" id="Email" type="email" class="input">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Phone" class="label">Mobile Number</label>
                        <input asp-for="Phone" id="Phone" type="text" class="input">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Password" class="label">Password</label>
                        <input asp-for="Password" id="Password" type="password" class="input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="ConfirmPassword" class="label">Repeat Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="group">
                        <input type="submit" class="button" value="Sign Up">
                    </div>
                    <div class="hr"></div>
                </div>
            </form>
        </div>
    </div>
</div>