@model IEnumerable<Multi_Shop.Context.Entites.Shop>

<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4" style="text-align:end"><span class="bg-secondary pr-3"> @ViewBag.Group</span></h2>
    <div class="row px-xl-5">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="~/img/Products/@item.ShopImg" style="height:250px !important" alt="">
                      @*  <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                        </div>*@
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="">@item.ShopTitle</a>
                      @*  <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>$@item.Price</h5>
                        </div>*@
                        <div class="d-flex align-items-center justify-content-center mb-1">

                            @if (item.Number > 1)
                            {
                                <small style="color:green" class="btn btn-primary">
                                    <a asp-controller="Home" asp-action="DetailOfProducts" asp-route-id="@item.ShopId" style="color:black">ورود</a>
                                </small>
                            }
                            else
                            {
                                <small style="color:red" class="btn btn-outline-danger">
                                    اتمام کالا
                                </small>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @if (ViewBag.Pagecount > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.Pagecount; i++)
                {
                    <li class="page-item"><input type="submit" asp-action="Products" asp-route-pageId="@i" asp-route-Filter="" asp-route-groupId=" @ViewBag.Group" value="@i" class="page-link"></li>
                }
               

            </ul>
        </nav>
    }
</div>