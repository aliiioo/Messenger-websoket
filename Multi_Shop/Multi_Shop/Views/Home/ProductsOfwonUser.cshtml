@model IEnumerable<Multi_Shop.Context.Entites.Shop>
<div>
    <h3 style="text-align: center; margin: 20px; ">Shop <span style="color: #FFD333">Panel</span></h3>
</div>
<div style="text-align:center;margin-bottom:20px">
    <a class="btn btn-primary" style="color:blue !important" asp-controller="Admin" asp-action="AddProducts">Add Product</a>

</div>

<div>
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4" style="text-align:end"><span class="bg-secondary pr-3">محصولات</span></h2>
        <div class="row px-xl-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">

                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/img/Products/@item.ShopImg" alt="">
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="">@item.ShopTitle</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>$@item.Price</h5><h6 class="text-muted ml-2"><del>$1000</del></h6>
                            </div>
                        </div>
                        <div style="text-align:center">
                            @*  <a class="btn btn-primary" asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.ShopId">Edit</a>*@
                            <small style="color:green" class="btn btn-primary">
                                <a asp-controller="Home" asp-action="DetailOfProducts" asp-route-id="@item.ShopId" style="color:black">ورود</a>
                            </small>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

</div>
